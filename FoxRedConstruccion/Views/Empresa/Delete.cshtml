@model Hillary.DTOs.EmpresaDTOS.GetIDResultEmpresaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Eliminar Empresa";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <!-- Header -->
                    <div class="card-header bg-gradient bg-danger text-white py-3 d-flex align-items-center">
                        <i class="bi bi-trash3-fill fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Eliminar Empresa</h3>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        <div class="alert alert-warning d-flex align-items-center shadow-sm">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                            <div>
                                <strong>¡Advertencia!</strong> Esta acción es irreversible.
                                Todos los datos asociados a esta empresa podrían perderse.
                            </div>
                        </div>

                        <p class="lead mb-4 text-muted">¿Está seguro de que desea eliminar la siguiente empresa?</p>

                        <!-- Company Summary Card -->
                        <div class="border rounded p-3 mb-4 bg-light">
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center">
                                <div>
                                    <h4 class="fw-bold text-danger mb-1">@Model.Nombre</h4>
                                    <p class="text-muted mb-2">RUC: <strong>@Model.Ruc</strong></p>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-envelope"></i> @Model.Email
                                    </p>
                                </div>
                                <div class="mt-3 mt-sm-0 text-center">
                                    <div class="d-flex flex-column align-items-center gap-1">
                                        <span class="badge bg-info fs-6">
                                            <i class="bi bi-people-fill"></i> @Model.UsuariosCount Usuarios
                                        </span>
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-list-check"></i> @Model.TareasCount Tareas
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Confirm Delete -->
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="text-center">
                            <p class="fw-semibold text-danger mb-4">Esta acción no se puede deshacer.</p>
                            <div class="d-flex justify-content-center gap-3">
                                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                    <i class="bi bi-trash"></i> Confirmar Eliminación
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Asegúrese de haber revisado toda la información antes de eliminar.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .lead {
            font-size: 1.1rem;
        }

        .btn-lg {
            min-width: 200px;
        }

        .border-danger {
            border-color: #dc3545 !important;
        }
    </style>
}
