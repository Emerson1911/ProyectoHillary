@model Hillary.DTOs.EmpresaDTOS.GetIDResultEmpresaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalles de Empresa";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">

                    <!-- Header -->
                    <div class="card-header bg-gradient bg-primary text-white py-3 d-flex align-items-center">
                        <i class="bi bi-building fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Detalles de la Empresa</h3>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">

                        <!-- Encabezado de la Empresa -->
                        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
                            <div>
                                <h4 class="fw-bold text-dark mb-1">@Model.Nombre</h4>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-file-earmark-text"></i> <strong>RUC:</strong> @Model.Ruc
                                </p>
                            </div>
                            <div class="mt-3 mt-sm-0">
                                <span class="badge fs-6 @(Model.Activo == true ? "bg-success" : "bg-danger")">
                                    <i class="bi bi-circle-fill"></i> @(Model.Activo == true ? "Activo" : "Inactivo")
                                </span>
                            </div>
                        </div>

                        <!-- Información principal -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="bg-light rounded p-3 h-100">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-geo-alt"></i> Dirección
                                    </h6>
                                    <p class="mb-0">@Model.Direccion</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="bg-light rounded p-3 h-100">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-telephone"></i> Teléfono
                                    </h6>
                                    <p class="mb-0">@Model.Telefono</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="bg-light rounded p-3 h-100">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-envelope"></i> Email
                                    </h6>
                                    <p class="mb-0">@Model.Email</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="bg-light rounded p-3 h-100">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-hash"></i> ID de Empresa
                                    </h6>
                                    <p class="mb-0">@Model.Id</p>
                                </div>
                            </div>
                        </div>

                        <!-- Estadísticas -->
                        <div class="row g-3 mt-4">
                            <div class="col-md-6">
                                <div class="bg-primary bg-opacity-10 rounded text-center p-3">
                                    <div class="fs-4 fw-bold text-primary">@Model.UsuariosCount</div>
                                    <small class="fw-semibold text-muted">Usuarios Asociados</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-secondary bg-opacity-10 rounded text-center p-3">
                                    <div class="fs-4 fw-bold text-secondary">@Model.TareasCount</div>
                                    <small class="fw-semibold text-muted">Tareas Asociadas</small>
                                </div>
                            </div>
                        </div>

                        <!-- Fechas -->
                        <div class="row mt-4 g-3">
                            <div class="col-md-6">
                                <div class="bg-light rounded p-3">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-calendar-plus"></i> Fecha de Creación
                                    </h6>
                                    <p class="mb-0">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="bg-light rounded p-3">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-clock-history"></i> Última Actualización
                                    </h6>
                                    <p class="mb-0">@Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="d-flex justify-content-center gap-3 mt-5">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg shadow-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg shadow-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>

                    </div>

                    <!-- Footer -->
                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Información detallada de la empresa registrada en el sistema.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .fw-semibold {
            font-weight: 600;
        }

        .btn-lg {
            min-width: 180px;
        }

        .fs-4 {
            font-size: 1.4rem;
        }
    </style>
}
