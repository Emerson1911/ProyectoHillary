@model Hillary.DTOs.EmpresaDTOS.EditEmpresaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Empresa";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <!-- Header -->
                    <div class="card-header bg-gradient bg-warning text-white py-3 d-flex align-items-center">
                        <i class="bi bi-pencil-square fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Editar Empresa #@ViewBag.Id</h3>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>@TempData["Error"]</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Nombre -->
                            <div class="mb-3">
                                <label for="Nombre" class="form-label fw-semibold">
                                    <i class="bi bi-building text-primary"></i> Nombre de la Empresa *
                                </label>
                                <input type="text"
                                       id="Nombre"
                                       name="Nombre"
                                       value="@Model.Nombre"
                                       class="form-control form-control-lg"
                                       placeholder="Ingrese el nombre de la empresa"
                                       required />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <!-- RUC -->
                            <div class="mb-3">
                                <label for="Ruc" class="form-label fw-semibold">
                                    <i class="bi bi-file-text text-secondary"></i> RUC
                                </label>
                                <input type="text"
                                       id="Ruc"
                                       name="Ruc"
                                       value="@Model.Ruc"
                                       class="form-control"
                                       placeholder="Ej: 01234567890123"
                                       maxlength="20" />
                                <span asp-validation-for="Ruc" class="text-danger small"></span>
                            </div>

                            <!-- Dirección -->
                            <div class="mb-3">
                                <label for="Direccion" class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt text-info"></i> Dirección
                                </label>
                                <textarea id="Direccion"
                                          name="Direccion"
                                          class="form-control"
                                          rows="2"
                                          placeholder="Ingrese la dirección completa">@Model.Direccion</textarea>
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>

                            <!-- Teléfono y Email en dos columnas -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="Telefono" class="form-label fw-semibold">
                                        <i class="bi bi-telephone text-success"></i> Teléfono
                                    </label>
                                    <input type="text"
                                           id="Telefono"
                                           name="Telefono"
                                           value="@Model.Telefono"
                                           class="form-control"
                                           placeholder="Ej: +503 1234-5678"
                                           maxlength="20" />
                                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="Email" class="form-label fw-semibold">
                                        <i class="bi bi-envelope text-danger"></i> Email
                                    </label>
                                    <input type="email"
                                           id="Email"
                                           name="Email"
                                           value="@Model.Email"
                                           class="form-control"
                                           placeholder="ejemplo@empresa.com" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Estado Activo -->
                            <div class="mb-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input type="checkbox"
                                                   id="Activo"
                                                   name="Activo"
                                                   value="true"
                                                   @(Model.Activo == true ? "checked" : "")
                                                   class="form-check-input"
                                                   role="switch" />
                                            <input type="hidden" name="Activo" value="false" />
                                            <label class="form-check-label fw-semibold" for="Activo">
                                                <i class="bi bi-toggle-on text-success"></i> Empresa Activa
                                            </label>
                                        </div>
                                        <small class="text-muted">
                                            Las empresas inactivas no aparecerán en algunas búsquedas
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <!-- Botones de acción -->
                            <div class="d-flex justify-content-between gap-2">
                                <a href="@Url.Action("Index", "Empresa")"
                                   class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-warning btn-lg text-white">
                                    <i class="bi bi-save"></i> Actualizar Empresa
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Los campos marcados con (*) son obligatorios
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .card {
            border-radius: 0.5rem;
        }

        .form-control:focus, .form-check-input:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

        .btn-lg {
            min-width: 150px;
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }
    </style>

    <script>
        // Debug: Verificar que los datos se cargaron
        console.log('Datos del modelo:', {
            nombre: '@Model?.Nombre',
            ruc: '@Model?.Ruc',
            email: '@Model?.Email',
            activo: @Json.Serialize(Model?.Activo ?? false)
        });
    </script>
}