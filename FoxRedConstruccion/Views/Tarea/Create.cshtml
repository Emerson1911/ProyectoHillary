@model Hillary.DTOs.TareaDTOS.CreateTareaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Tarea";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-gradient bg-success text-white py-3 d-flex align-items-center">
                        <i class="bi bi-plus-square fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Crear Nueva Tarea</h3>
                    </div>

                    <div class="card-body p-4">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                                <i class="bi bi-exclamation-circle-fill me-2"></i>
                                <strong>Error:</strong> @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label for="Nombre" class="form-label fw-semibold">
                                    <i class="bi bi-tag text-success"></i> Nombre de la Tarea <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="Nombre" name="Nombre" class="form-control form-control-lg"
                                       value="@Model?.Nombre" placeholder="Ingrese el nombre de la tarea" required />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label for="Descripcion" class="form-label fw-semibold">
                                    <i class="bi bi-file-text text-secondary"></i> Descripción
                                </label>
                                <textarea id="Descripcion" name="Descripcion" class="form-control" rows="5"
                                          placeholder="Describa la tarea en detalle...">@Model?.Descripcion</textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                <small class="text-muted">Opcional: Agregue detalles sobre la tarea</small>
                            </div>

                            <div class="d-flex justify-content-end gap-3">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                    <i class="bi bi-save2-fill"></i> Guardar Tarea
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> La tarea se asignará automáticamente a tu empresa.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}