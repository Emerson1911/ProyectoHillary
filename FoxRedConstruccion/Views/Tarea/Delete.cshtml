@model Hillary.DTOs.TareaDTOS.GetIDResultTareaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-gradient bg-danger text-white py-3 d-flex align-items-center">
                        <i class="bi bi-trash3-fill fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Eliminar Tarea</h3>
                    </div>

                    <div class="card-body p-4">
                        <div class="alert alert-warning d-flex align-items-center shadow-sm">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                            <div>
                                <strong>¡Advertencia!</strong> Esta acción es irreversible.
                                La tarea será eliminada permanentemente.
                            </div>
                        </div>

                        <p class="lead mb-4 text-muted">¿Está seguro de que desea eliminar la siguiente tarea?</p>

                        <!-- Task Summary Card -->
                        <div class="border rounded p-4 mb-4 bg-light">
                            <h4 class="fw-bold text-danger mb-3">@Model.Nombre</h4>

                            <div class="mb-3">
                                <h6 class="text-secondary mb-2">
                                    <i class="bi bi-file-text"></i> Descripción:
                                </h6>
                                <p class="mb-0">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</p>
                            </div>

                            <div class="pt-3 border-top">
                                <p class="text-muted mb-0">
                                    <i class="bi bi-building"></i>
                                    <strong>Empresa:</strong> @Model.EmpresaNombre
                                </p>
                            </div>
                        </div>

                        <!-- Confirm Delete Form -->
                        <form method="post" asp-action="Delete" class="text-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />

                            <p class="fw-semibold text-danger mb-4">Esta acción no se puede deshacer.</p>

                            <div class="d-flex justify-content-center gap-3">
                                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                    <i class="bi bi-trash"></i> Confirmar Eliminación
                                </button>
                                <a href="@Url.Action("Index", "Tarea")" class="btn btn-outline-secondary btn-lg shadow-sm">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Asegúrese de haber revisado toda la información antes de eliminar.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>