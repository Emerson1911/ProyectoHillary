@model Hillary.DTOs.TareaDTOS.GetIDResultTareaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalles de Tarea";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-gradient bg-success text-white py-3 d-flex align-items-center">
                        <i class="bi bi-check2-square fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Detalles de la Tarea</h3>
                    </div>

                    <div class="card-body p-4">
                        <!-- Título de la Tarea -->
                        <div class="mb-4">
                            <h4 class="fw-bold text-dark mb-1">@Model.Nombre</h4>
                            <p class="text-muted mb-0">
                                <i class="bi bi-hash"></i> ID: @Model.Id
                            </p>
                        </div>

                        <!-- Descripción -->
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <div class="bg-light rounded p-3">
                                    <h6 class="fw-semibold text-secondary mb-2">
                                        <i class="bi bi-file-text"></i> Descripción
                                    </h6>
                                    <p class="mb-0">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</p>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Empresa -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="bg-primary bg-opacity-10 rounded p-3">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-building"></i> Empresa
                                    </h6>
                                    <p class="mb-0 fw-bol<p class="mb-0 fw-bold">@Model.EmpresaNombre</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="bg-secondary bg-opacity-10 rounded p-3">
                                    <h6 class="fw-semibold text-secondary mb-1">
                                        <i class="bi bi-hash"></i> ID de Empresa
                                    </h6>
                                    <p class="mb-0 fw-bold">@Model.EmpresaId</p>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="d-flex justify-content-center gap-3 mt-5">
                            <a href="@Url.Action("Edit", "Tarea", new { id = Model.Id })"
                               class="btn btn-warning btn-lg shadow-sm text-white">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a href="@Url.Action("Delete", "Tarea", new { id = Model.Id })"
                               class="btn btn-danger btn-lg shadow-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                            <a href="@Url.Action("Index", "Tarea")"
                               class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </div>

                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Información detallada de la tarea.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .btn:hover {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
}
