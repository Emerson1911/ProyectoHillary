@model Hillary.DTOs.TareaDTOS.EditTareaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Tarea";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <!-- Header -->
                    <div class="card-header bg-gradient bg-warning text-white py-3 d-flex align-items-center">
                        <i class="bi bi-pencil-square fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Editar Tarea #@ViewBag.Id</h3>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>@TempData["Error"]</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Nombre -->
                            <div class="mb-3">
                                <label for="Nombre" class="form-label fw-semibold">
                                    <i class="bi bi-card-checklist text-primary"></i> Nombre de la Tarea *
                                </label>
                                <input type="text"
                                       id="Nombre"
                                       name="Nombre"
                                       value="@Model.Nombre"
                                       class="form-control form-control-lg"
                                       placeholder="Ingrese el nombre de la tarea"
                                       required />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <!-- Descripción -->
                            <div class="mb-3">
                                <label for="Descripcion" class="form-label fw-semibold">
                                    <i class="bi bi-text-paragraph text-secondary"></i> Descripción
                                </label>
                                <textarea id="Descripcion"
                                          name="Descripcion"
                                          class="form-control"
                                          rows="4"
                                          placeholder="Ingrese una descripción detallada de la tarea">@Model.Descripcion</textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i> Proporcione detalles sobre qué debe hacerse en esta tarea
                                </small>
                            </div>

                            <!-- Botones de acción -->
                            <div class="d-flex justify-content-between gap-2">
                                <a href="@Url.Action("Index", "Tarea")"
                                   class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-warning btn-lg text-white">
                                    <i class="bi bi-save"></i> Actualizar Tarea
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Los campos marcados con (*) son obligatorios
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .card {
            border-radius: 0.5rem;
        }

        .form-control:focus, .form-check-input:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

        .btn-lg {
            min-width: 150px;
        }

        .bg-gradient {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        }

        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }
    </style>

    <script>
        // Debug: Verificar que los datos se cargaron
        console.log('Datos del modelo:', {
            nombre: '@Model?.Nombre',
            descripcion: '@Model?.Descripcion'
        });

        // Auto-resize del textarea
        const textarea = document.getElementById('Descripcion');
        if (textarea) {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        }
    </script>
}