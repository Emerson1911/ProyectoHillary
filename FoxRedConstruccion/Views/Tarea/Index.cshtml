@model Hillary.DTOs.TareaDTOS.SearchResultTareaDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Tareas";
}

<div class="min-vh-100 bg-light py-4">
    <div class="container">
        
        <!-- Header Section -->
        <div class="mb-4">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Tareas</h1>
                    <p class="text-muted">Gestiona y organiza todas tus tareas</p>
                </div>
                <a href="@Url.Action("Create", "Tarea")"
                   class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nueva Tarea
                </a>
            </div>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>@TempData["Success"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>@TempData["Error"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search Filters -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-funnel text-primary me-2"></i>
                    <h5 class="card-title mb-0">Filtros de Búsqueda</h5>
                </div>
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Nombre de la Tarea</label>
                            <input type="text" name="nombre" value="@ViewBag.Nombre"
                                   placeholder="Buscar por nombre"
                                   class="form-control">
                        </div>
                        
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-2"></i>
                                Buscar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Quick Link to My Tasks -->
        <div class="mb-3">
            <a href="@Url.Action("MisTareas", "Tarea")" class="btn btn-outline-primary">
                <i class="bi bi-list-task me-2"></i>
                Ver Mis Tareas
            </a>
        </div>

        <!-- Results Info -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">
                Mostrando <span class="fw-bold text-dark">@Model?.Data.Count</span> de <span class="fw-bold text-dark">@ViewBag.TotalCount</span> tareas
            </p>
        </div>

        <!-- Cards Grid -->
        @if (Model != null && Model.Data.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
                @foreach (var tarea in Model.Data)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow-lg transition">
                            <!-- Card Header -->
                            <div class="card-header bg-gradient bg-success text-white p-3">
                                <div class="d-flex align-items-start justify-content-between">
                                    <div class="d-flex align-items-center gap-2 flex-grow-1 min-w-0">
                                        <div class="bg-white bg-opacity-25 rounded p-2">
                                            <i class="bi bi-check2-square fs-4"></i>
                                        </div>
                                        <div class="min-w-0 flex-grow-1">
                                            <h5 class="card-title mb-0 fw-bold text-truncate" title="@tarea.Nombre">@tarea.Nombre</h5>
                                            <small class="text-white-50">ID: @tarea.Id</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="card-body">
                                <!-- Descripción -->
                                <div class="mb-3">
                                    <div class="d-flex align-items-start gap-2">
                                        <div class="bg-light rounded p-2">
                                            <i class="bi bi-file-text text-secondary"></i>
                                        </div>
                                        <div class="flex-grow-1 min-w-0">
                                            <small class="text-muted d-block">Descripción</small>
                                            <p class="mb-0 text-truncate-3" title="@tarea.Descripcion">
                                                @(string.IsNullOrEmpty(tarea.Descripcion) ? "Sin descripción" : tarea.Descripcion)
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Empresa -->
                                <div class="d-flex align-items-center gap-2 pt-3 border-top">
                                    <div class="bg-light rounded p-2">
                                        <i class="bi bi-building text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 min-w-0">
                                        <small class="text-muted d-block">Empresa</small>
                                        <strong class="text-truncate d-block" title="@tarea.EmpresaNombre">@tarea.EmpresaNombre</strong>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Footer - Action Buttons -->
                            <div class="card-footer bg-light">
                                <div class="btn-group w-100" role="group">
                                    <a href="@Url.Action("Details", "Tarea", new { id = tarea.Id })"
                                       class="btn btn-outline-success"
                                       title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                        <span class="d-none d-lg-inline ms-1">Ver</span>
                                    </a>
                                    <a href="@Url.Action("Edit", "Tarea", new { id = tarea.Id })"
                                       class="btn btn-outline-warning"
                                       title="Editar tarea">
                                        <i class="bi bi-pencil"></i>
                                        <span class="d-none d-lg-inline ms-1">Editar</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Tarea", new { id = tarea.Id })"
                                       class="btn btn-outline-danger"
                                       title="Eliminar tarea">
                                        <i class="bi bi-trash"></i>
                                        <span class="d-none d-lg-inline ms-1">Eliminar</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card shadow-sm text-center py-5">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                    </div>
                    <h3 class="fw-bold mb-2">No se encontraron tareas</h3>
                    <p class="text-muted mb-4">Intenta ajustar los filtros de búsqueda o crea una nueva tarea</p>
                    <a href="@Url.Action("Create", "Tarea")"
                       class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nueva Tarea
                    </a>
                </div>
            </div>
        }

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                   pageNumber = ViewBag.CurrentPage - 1, 
                                   nombre = ViewBag.Nombre
                               })">
                                <i class="bi bi-chevron-left"></i>
                                Anterior
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">
                                <i class="bi bi-chevron-left"></i>
                                Anterior
                            </span>
                        </li>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        @if (i == ViewBag.CurrentPage)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                       pageNumber = i, 
                                       nombre = ViewBag.Nombre
                                   })">
                                    @i
                                </a>
                            </li>
                        }
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                   pageNumber = ViewBag.CurrentPage + 1, 
                                   nombre = ViewBag.Nombre
                               })">
                                Siguiente
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">
                                Siguiente
                                <i class="bi bi-chevron-right"></i>
                            </span>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <style>
        .hover-shadow-lg {
            transition: box-shadow 0.3s ease;
        }
        .hover-shadow-lg:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .min-w-0 {
            min-width: 0;
        }
        .text-truncate-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}