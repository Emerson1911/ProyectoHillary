@model List<Hillary.DTOs.TareaDTOS.SearchResultTareaDTO.TareaDTO>

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mis Tareas";
}

<div class="min-vh-100 bg-light py-4">
    <div class="container">

        <!-- Header Section -->
        <div class="mb-4">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">
                        <i class="bi bi-person-check text-success me-2"></i>
                        Mis Tareas
                    </h1>
                    <p class="text-muted">Tareas de tu empresa</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Create", "Tarea")"
                       class="btn btn-success btn-lg shadow-sm">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nueva Tarea
                    </a>
                    <a href="@Url.Action("Index", "Tarea")"
                       class="btn btn-outline-secondary btn-lg shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>
                        Todas
                    </a>
                </div>
            </div>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>@TempData["Success"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Results Info -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">
                <span class="fw-bold text-dark">@Model.Count</span> tareas encontradas
            </p>
        </div>

        <!-- Cards Grid -->
        @if (Model != null && Model.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
                @foreach (var tarea in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow-lg transition">
                            <!-- Card Header -->
                            <div class="card-header bg-gradient bg-success text-white p-3">
                                <div class="d-flex align-items-start justify-content-between">
                                    <div class="d-flex align-items-center gap-2 flex-grow-1 min-w-0">
                                        <div class="bg-white bg-opacity-25 rounded p-2">
                                            <i class="bi bi-check2-square fs-4"></i>
                                        </div>
                                        <div class="min-w-0 flex-grow-1">
                                            <h5 class="card-title mb-0 fw-bold text-truncate" title="@tarea.Nombre">@tarea.Nombre</h5>
                                            <small class="text-white-50">ID: @tarea.Id</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="card-body">
                                <!-- Descripción -->
                                <div class="mb-3">
                                    <div class="d-flex align-items-start gap-2">
                                        <div class="bg-light rounded p-2">
                                            <i class="bi bi-file-text text-secondary"></i>
                                        </div>
                                        <div class="flex-grow-1 min-w-0">
                                            <small class="text-muted d-block">Descripción</small>
                                            <p class="mb-0 text-truncate-3" title="@tarea.Descripcion">
                                                @(string.IsNullOrEmpty(tarea.Descripcion) ? "Sin descripción" : tarea.Descripcion)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Footer - Action Buttons -->
                            <div class="card-footer bg-light">
                                <div class="btn-group w-100" role="group">
                                    <a href="@Url.Action("Details", "Tarea", new { id = tarea.Id })"
                                       class="btn btn-outline-success"
                                       title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                        <span class="d-none d-lg-inline ms-1">Ver</span>
                                    </a>
                                    <a href="@Url.Action("Edit", "Tarea", new { id = tarea.Id })"
                                       class="btn btn-outline-warning"
                                       title="Editar tarea">
                                        <i class="bi bi-pencil"></i>
                                        <span class="d-none d-lg-inline ms-1">Editar</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Tarea", new { id = tarea.Id })"
                                       class="btn btn-outline-danger"
                                       title="Eliminar tarea">
                                        <i class="bi bi-trash"></i>
                                        <span class="d-none d-lg-inline ms-1">Eliminar</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card shadow-sm text-center py-5">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                    </div>
                    <h3 class="fw-bold mb-2">No tienes tareas creadas</h3>
                    <p class="text-muted mb-4">Comienza creando tu primera tarea para organizar tu trabajo</p>
                    <a href="@Url.Action("Create", "Tarea")"
                       class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>
                        Crear Mi Primera Tarea
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .hover-shadow-lg {
            transition: box-shadow 0.3s ease;
        }

            .hover-shadow-lg:hover {
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        .min-w-0 {
            min-width: 0;
        }

        .text-truncate-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}