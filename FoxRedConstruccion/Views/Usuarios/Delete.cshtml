@model Hillary.DTOs.UsuarioDTO.GetlResultUsuarioDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="min-vh-100 bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0">
                    <!-- Header -->
                    <div class="card-header bg-gradient bg-danger text-white py-3 d-flex align-items-center">
                        <i class="bi bi-trash3-fill fs-4 me-2"></i>
                        <h3 class="mb-0 fw-bold">Eliminar Usuario</h3>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        <div class="alert alert-warning d-flex align-items-center shadow-sm">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                            <div>
                                <strong>¡Advertencia!</strong> Esta acción es irreversible.
                                Todos los datos asociados a este usuario podrían perderse.
                            </div>
                        </div>

                        <p class="lead mb-4 text-muted">¿Está seguro de que desea eliminar el siguiente usuario?</p>

                        <!-- User Summary Card -->
                        <div class="border rounded p-3 mb-4 bg-light">
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center">
                                <div>
                                    <h4 class="fw-bold text-danger mb-1">
                                        <i class="bi bi-person-circle"></i> @Model.Nombre
                                    </h4>
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-envelope"></i> <strong>@Model.Email</strong>
                                    </p>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-building"></i> Empresa: <strong>@Model.EmpresaNombre</strong>
                                    </p>
                                </div>
                                <div class="mt-3 mt-sm-0 text-center">
                                    <div class="d-flex flex-column align-items-center gap-1">
                                        <span class="badge @(Model.RolId == 1 ? "bg-warning" : "bg-secondary") fs-6">
                                            <i class="bi bi-shield-check"></i> @Model.RolNombre
                                        </span>
                                        <span class="badge @(Model.Activo == true ? "bg-success" : "bg-danger") fs-6">
                                            <i class="bi bi-circle-fill"></i> @(Model.Activo == true ? "Activo" : "Inactivo")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Info -->
                        <div class="card bg-danger bg-opacity-10 mb-4">
                            <div class="card-body">
                                <h6 class="fw-semibold text-danger mb-2">
                                    <i class="bi bi-info-circle"></i> Consecuencias de eliminar este usuario
                                </h6>
                                <ul class="mb-0 small">
                                    <li>Se perderá el acceso al sistema de este usuario</li>
                                    <li>Las tareas asignadas quedarán sin responsable</li>
                                    <li>No se podrá recuperar la información una vez eliminada</li>
                                    <li>Esta acción no se puede deshacer</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Confirm Delete Form -->
                        <form method="post" asp-action="Delete" class="text-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />

                            <p class="fw-semibold text-danger mb-4">Esta acción no se puede deshacer.</p>

                            <div class="d-flex justify-content-center gap-3">
                                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                    <i class="bi bi-trash"></i> Confirmar Eliminación
                                </button>
                                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-outline-secondary btn-lg shadow-sm">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer text-center bg-white border-top-0 text-muted small">
                        <i class="bi bi-info-circle"></i> Asegúrese de haber revisado toda la información antes de eliminar.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .lead {
            font-size: 1.1rem;
        }

        .btn-lg {
            min-width: 200px;
        }

        .bg-danger.bg-opacity-10 {
            background-color: rgba(220, 53, 69, 0.1) !important;
        }
    </style>

    <script>
        // Confirmation on form submit
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!confirm('¿Está completamente seguro de que desea eliminar este usuario? Esta acción NO se puede deshacer.')) {
                e.preventDefault();
            }
        });
    </script>
}