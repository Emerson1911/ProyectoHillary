@model Hillary.DTOs.UsuarioDTO.SearchResultUsuarioDTO

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Usuarios";
}
<div class="min-vh-100 bg-light py-4">
    <div class="container">
        
        <!-- Header Section -->
        <div class="mb-4">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Usuarios</h1>
                    <p class="text-muted">Gestiona y visualiza todos los usuarios</p>
                </div>
                <a href="@Url.Action("Create", "Usuarios")"
                   class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nuevo Usuario
                </a>
            </div>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>@TempData["Success"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>@TempData["Error"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Search Filters -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-funnel text-primary me-2"></i>
                    <h5 class="card-title mb-0">Filtros de Búsqueda</h5>
                </div>
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Nombre</label>
                            <input type="text" name="nombre" value="@ViewBag.Nombre"
                                   placeholder="Buscar por nombre"
                                   class="form-control">
                        </div>
                        
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input type="text" name="email" value="@ViewBag.Email"
                                   placeholder="Buscar por email"
                                   class="form-control">
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Rol</label>
                            <select name="rolId" class="form-select">
                                <option value="">Todos</option>
                                <option value="1" @(ViewBag.RolId == 1 ? "selected" : "")>Gerente</option>
                                <option value="2" @(ViewBag.RolId == 2 ? "selected" : "")>Usuario</option>
                            </select>
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Estado</label>
                            <select name="activo" class="form-select">
                                <option value="">Todos</option>
                                <option value="true" @(ViewBag.Activo == true ? "selected" : "")>Activos</option>
                                <option value="false" @(ViewBag.Activo == false ? "selected" : "")>Inactivos</option>
                            </select>
                        </div>
                        
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-2"></i>
                                Buscar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results Info -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">
                Mostrando <span class="fw-bold text-dark">@Model?.Data.Count</span> de <span class="fw-bold text-dark">@ViewBag.TotalCount</span> usuarios
            </p>
        </div>

        <!-- Cards Grid -->
        @if (Model != null && Model.Data.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
                @foreach (var usuario in Model.Data)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow-lg transition">
                            <!-- Card Header -->
                            <div class="card-header bg-gradient bg-primary text-white p-3">
                                <div class="d-flex align-items-start justify-content-between mb-2">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="bg-white bg-opacity-25 rounded p-2">
                                            <i class="bi bi-person-circle fs-4"></i>
                                        </div>
                                        <div>
                                            <h5 class="card-title mb-0 fw-bold text-truncate" title="@usuario.Nombre">@usuario.Nombre</h5>
                                            <small class="text-white-50">ID: @usuario.Id</small>
                                        </div>
                                    </div>
                                </div>
                                <button type="button"
                                        class="btn btn-toggle-status w-100 btn-sm @(usuario.Activo == true ? "btn-success" : "btn-danger")"
                                        data-id="@usuario.Id"
                                        data-activo="@usuario.Activo">
                                    <i class="bi bi-circle-fill small"></i> @(usuario.Activo == true ? "Activo" : "Inactivo")
                                </button>
                            </div>

                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="mb-3">
                                    <!-- Email -->
                                    <div class="d-flex align-items-center gap-2 mb-3">
                                        <div class="bg-light rounded p-2">
                                            <i class="bi bi-envelope text-secondary"></i>
                                        </div>
                                        <div class="flex-grow-1 min-w-0">
                                            <small class="text-muted d-block">Email</small>
                                            <strong class="text-truncate d-block" title="@usuario.Email">@usuario.Email</strong>
                                        </div>
                                    </div>

                                    <!-- Empresa -->
                                    <div class="d-flex align-items-center gap-2 mb-3">
                                        <div class="bg-light rounded p-2">
                                            <i class="bi bi-building text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 min-w-0">
                                            <small class="text-muted d-block">Empresa</small>
                                            <strong class="text-truncate d-block">@usuario.EmpresaNombre</strong>
                                        </div>
                                    </div>

                                    <!-- Rol -->
                                    <div class="d-flex align-items-center gap-2 mb-3">
                                        <div class="bg-light rounded p-2">
                                            <i class="bi bi-shield-check text-warning"></i>
                                        </div>
                                        <div class="flex-grow-1 min-w-0">
                                            <small class="text-muted d-block">Rol</small>
                                            <span class="badge @(usuario.RolId == 1 ? "bg-warning" : "bg-secondary")">
                                                @usuario.RolNombre
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Footer - Action Buttons -->
                            <div class="card-footer bg-light">
                                <div class="btn-group w-100" role="group">
                                    <a href="@Url.Action("Details", "Usuarios", new { id = usuario.Id })"
                                       class="btn btn-outline-primary"
                                       title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                        <span class="d-none d-lg-inline ms-1">Ver</span>
                                    </a>
                                    <a href="@Url.Action("Edit", "Usuarios", new { id = usuario.Id })"
                                       class="btn btn-outline-warning"
                                       title="Editar usuario">
                                        <i class="bi bi-pencil"></i>
                                        <span class="d-none d-lg-inline ms-1">Editar</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Usuarios", new { id = usuario.Id })"
                                       class="btn btn-outline-danger"
                                       title="Eliminar usuario">
                                        <i class="bi bi-trash"></i>
                                        <span class="d-none d-lg-inline ms-1">Eliminar</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card shadow-sm text-center py-5">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                    </div>
                    <h3 class="fw-bold mb-2">No se encontraron usuarios</h3>
                    <p class="text-muted mb-4">Intenta ajustar los filtros de búsqueda o crea un nuevo usuario</p>
                    <a href="@Url.Action("Create", "Usuarios")"
                       class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nuevo Usuario
                    </a>
                </div>
            </div>
        }

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                   pageNumber = ViewBag.CurrentPage - 1, 
                                   nombre = ViewBag.Nombre, 
                                   email = ViewBag.Email,
                                   rolId = ViewBag.RolId,
                                   activo = ViewBag.Activo 
                               })">
                                <i class="bi bi-chevron-left"></i>
                                Anterior
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">
                                <i class="bi bi-chevron-left"></i>
                                Anterior
                            </span>
                        </li>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        @if (i == ViewBag.CurrentPage)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                       pageNumber = i, 
                                       nombre = ViewBag.Nombre, 
                                       email = ViewBag.Email,
                                       rolId = ViewBag.RolId,
                                       activo = ViewBag.Activo 
                                   })">
                                    @i
                                </a>
                            </li>
                        }
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                   pageNumber = ViewBag.CurrentPage + 1, 
                                   nombre = ViewBag.Nombre, 
                                   email = ViewBag.Email,
                                   rolId = ViewBag.RolId,
                                   activo = ViewBag.Activo 
                               })">
                                Siguiente
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">
                                Siguiente
                                <i class="bi bi-chevron-right"></i>
                            </span>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.btn-toggle-status').forEach(btn => {
            btn.addEventListener('click', async function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const id = this.dataset.id;
                const currentStatus = this.dataset.activo === 'True';
                const newStatus = !currentStatus;
                const button = this;

                if (confirm(`¿Está seguro de ${newStatus ? 'activar' : 'desactivar'} este usuario?`)) {
                    try {
                        button.disabled = true;
                        button.style.opacity = '0.6';

                        const response = await fetch(`/Usuarios/ChangeStatus?id=${id}&activo=${newStatus}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        const result = await response.json();

                        if (result.success) {
                            window.location.reload();
                        } else {
                            alert(result.message || 'Error al cambiar el estado');
                            button.disabled = false;
                            button.style.opacity = '1';
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Error al cambiar el estado');
                        button.disabled = false;
                        button.style.opacity = '1';
                    }
                }
            });
        });
    </script>
    
    <style>
        .hover-shadow-lg {
            transition: box-shadow 0.3s ease;
        }
        .hover-shadow-lg:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .min-w-0 {
            min-width: 0;
        }
    </style>
}